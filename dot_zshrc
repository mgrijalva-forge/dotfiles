{{- if eq .chezmoi.username "vscode" }}
alias csportsclose='gh cs ports visibility 3035:private 5000:private 4566:private'
alias csports='gh cs ports visibility 3035:public 5000:public 4566:public'
alias csportsforward='gh cs ports forward 3035:3035 5000:5000 4566:4566'
cscreate() {
	gh cs create \
		-b $1 \
		-r forgeglobal/shagorex \
		--devcontainer-path .devcontainer/devcontainer.json \
		-m premiumLinux \
		--idle-timeout 4h
}
